<div class="title">
  <h2>Welcome <%= @user.first_name %></h2>
</div>

<div class="yourListings">
  <h3>Your Listings</h3>

  <%@listings.each do |listing|%>

    <div class="single_listing">
      <p class="name"> <%=listing.name%> </p>
      <p class="description"> <%=listing.description%> </p>
      <p class="price"> Price per night: Â£<%=listing.price%> </p>
      <p class="date"> Available from <%=flip_date(listing.start_date) %> to <%= flip_date(listing.end_date) %> </p>
    </div>

  <%end%>
</div>


<div class="yourBookings">
  <h3>Bookings made by you</h3>

  <%@bookings.each do |booking|%>
   <%= p @bookings%>
    <div class="single_listing">
      <p class="name"> <%=listing_name(booking)%> </p>
      <p class="date"> Booked from <%=flip_date(booking.start_date) %> to <%= flip_date(booking.end_date) %> </p>
      <p class="confirmed"> Status: <%=confirmed_status%> </p>
    </div>

  <%end%>
</div>

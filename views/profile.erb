<div class="title">
  <h2>Welcome <%= @user.first_name %></h2>
</div>

<div class="yourListings">
  <h3>Your Listings</h3>
  <%if @listings.count == 0 %>
    <p class="noListings"> You Have No Listings... yet!🏖 </p>
    <% else %>
  <%@listings.each do |listing|%>

    <div class="single_listing">
      <p class="name"> <%=listing.name%> </p>
      <p class="description"> <%=listing.description%> </p>
      <p class="price"> Price per night: £<%=listing.price%> </p>
      <p class="date"> Available from <%=flip_date(listing.start_date) %> to <%= flip_date(listing.end_date) %> </p>
    </div>

  <%end%>
  <%end%>
</div>

<div class="yourBookings">
  <h3>Your Bookings</h3>
  <%if @bookings.count == 0 %>
    <p class="noListings"> You Have No Bookings... yet!🏔 </p>
    <% else %>
  <%@listings.each do |listing|%>

    <div class="single_listing">
      <p class="name"> <%=listing.name%> </p>
      <p class="description"> <%=listing.description%> </p>
      <p class="price"> Price per night: £<%=listing.price%> </p>
      <p class="date"> Available from <%=flip_date(listing.start_date) %> to <%= flip_date(listing.end_date) %> </p>
    </div>

  <%end%>
  <%end%>
</div>
